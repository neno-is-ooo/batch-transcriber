{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "test": "vitest run",
    "test:unit": "vitest run src",
    "test:integration": "vitest run tests/integration",
    "test:workers": "vitest run tests/workers",
    "test:workers:live:coreml": "bash tests/workers/test-coreml.sh",
    "test:workers:live:whisper": "bash tests/workers/test-whisper.sh",
    "test:workers:live:faster-whisper": "bash tests/workers/test-faster-whisper.sh",
    "test:e2e": "node tests/e2e/run-e2e.mjs",
    "test:e2e:ui": "node tests/e2e/run-e2e.mjs --ui",
    "test:e2e:debug": "node tests/e2e/run-e2e.mjs --debug",
    "build:workers": "./scripts/build-workers.sh",
    "bundle:app": "./scripts/bundle-app.sh",
    "prepare:worker": "npm run build:workers && npm run bundle:app",
    "preview": "vite preview",
    "tauri": "tauri",
    "package:mac": "./scripts/package-macos.sh",
    "package:mac:dmg": "npm run tauri build -- --bundles app,dmg",
    "release:mac": "./scripts/release-macos.sh",
    "release:mac:sign-only": "./scripts/release-macos.sh --skip-notary"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.55.0",
    "vite": "^6.0.3",
    "vitest": "^4.0.17"
  }
}
